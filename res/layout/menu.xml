<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
		android:id="@+id/menu_selected_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@android:color/transparent"
		    android:drawableTop="@drawable/document_button"/>
		<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		    android:text="@string/menu_current_course"/>
	</LinearLayout>
    
    <LinearLayout
        android:id="@+id/menu_select_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@android:color/transparent"
		    android:drawableTop="@drawable/course_button"/>
		<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		    android:text="@string/menu_courses"/>
	</LinearLayout>
	
    <LinearLayout
		android:id="@+id/menu_upload_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@android:color/transparent"
		    android:drawableTop="@drawable/upload_button"/>
		<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		    android:text="@string/menu_upload"/>
	</LinearLayout>
	
    <LinearLayout
		android:id="@+id/menu_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@android:color/transparent"
	        android:drawableTop="@drawable/setting_button"/>
		<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		    android:text="@string/menu_settings"/>
	</LinearLayout>

</LinearLayout>