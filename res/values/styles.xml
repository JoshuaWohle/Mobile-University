<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="light_theme">
        <item name="android:background">@color/light_brown</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>
    <style name="dark_theme">
        <item name="android:background">@color/dark_brown</item>
        <item name="android:textColor">@color/light_brown</item>
    </style>
    <style name="middle_theme">
        <item name="android:background">@color/orange_brown</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>
    <style name="menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>